<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.shape.Box?>
<BorderPane fx:id="mainBorderPane"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="asen.koparanski.Controller">
    <left>
    <VBox maxWidth="220">
    <children>
        <TableView fx:id="bookTable" maxWidth="440" minWidth="440" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn maxWidth="300" minWidth="300" text="Title">
                    <cellValueFactory>
                        <PropertyValueFactory property="title" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="70" minWidth="70" text="Year">
                    <cellValueFactory>
                        <PropertyValueFactory property="year" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="70" minWidth="70" text="Price Â£">
                    <cellValueFactory>
                        <PropertyValueFactory property="price" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
    </VBox>
    </left>
    <center>
        <VBox alignment="CENTER">
            <Button maxWidth="100" onAction="#buyBooksButton" text="Buy books" />
            <HBox alignment="CENTER">
                <Label maxWidth="120" text=" Total Price Amount: " />
                <Label fx:id="finalPrice" maxWidth="120"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
